<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/engTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="126dp"
        android:ems="10"
        android:editable="false"
        android:text="English:" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/langTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/engTranslate"
        android:layout_alignTop="@+id/engTranslate"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:editable="false"
        android:text="Language:" />

    <Button
        android:id="@+id/MenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/langTranslate"
        android:layout_marginTop="28dp"
        android:onClick="menuClicked"
        android:text="Menu" />

    <Button
        android:id="@+id/ScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/MenuButton"
        android:layout_alignBottom="@+id/MenuButton"
        android:layout_alignRight="@+id/langTranslate"
        android:onClick="scanClicked"
        android:text="Scan" />

</RelativeLayout>