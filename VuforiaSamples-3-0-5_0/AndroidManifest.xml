<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.vuforia.samples.VuforiaSamples"
    android:versionCode="200"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="18" />

    <uses-feature android:glEsVersion="0x00020000" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:theme="@style/SampleAppsTheme" >

        <activity
            android:name="com.qualcomm.vuforia.samples.VuforiaSamples.ui.ActivityList.ActivitySplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            
        </activity>
        <activity
            android:name="com.qualcomm.vuforia.samples.VuforiaSamples.ui.ActivityList.ActivityLauncher"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.qualcomm.vuforia.samples.VuforiaSamples.ui.ActivityList.AboutScreen"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.qualcomm.vuforia.samples.VuforiaSamples.app.CloudRecognition.CloudReco"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="com.qualcomm.vuforia.samples.VuforiaSamples.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qualcomm.vuforia.samples.VuforiaSamples.LanguageActivity"
            android:label="@string/title_activity_language" >
        </activity>
    </application>

</manifest>